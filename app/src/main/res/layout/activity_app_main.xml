<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppMainActivity">

    <!-- App logo image -->
    <ImageView
        android:id="@+id/appLogo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/oplogoc"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Watch YouTube Video button -->
    <Button
        android:id="@+id/watchYouTubeVideoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch a YouTube Video"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appLogo_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- List YouTube Channel button -->
    <Button
        android:id="@+id/listYouTubeChannelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List YouTube Channel Videos"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/watchYouTubeVideoBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
